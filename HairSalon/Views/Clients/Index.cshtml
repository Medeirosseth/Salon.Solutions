@{
  Layout = "_Layout";
}

@using ClairesHairCare.Models
@model List<ClairesHairCare.Models.Client>
<h1>Clients</h1>
@if (@Model.Count == 0)
{
  <h3>No Clients have been added to this Stylist</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.ClientName}", "Details", new {id = client.ClientId}) | @client.Stylist.StylistName</li>
}
<p>@Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("Back to Stylists", "Index", "Stylists")</p>